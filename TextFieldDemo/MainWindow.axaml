<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:TextFieldControl.Controls"
        x:Class="TextFieldDemo.MainWindow"
        Title="TextField Component - Complete Test Suite"
        Width="1200"
        Height="600"
        MinHeight="600"
        Background="#FAFAFA">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Spacing="30" Margin="40" MaxWidth="1100">
            
            <!-- РАЗМЕРЫ: MEDIUM vs SMALL -->
            <Border Background="White" Padding="20" CornerRadius="8" BoxShadow="0 2 8 0 #1A000000">
                <StackPanel Spacing="15">
                    <TextBlock Text="Size Comparison - Medium vs Small" FontWeight="Bold" FontSize="18"/>
                    
                    <Grid ColumnDefinitions="1*,1*,1*,1*" ColumnSpacing="30">
                        <StackPanel Grid.Column="0" Spacing="5">
                            <controls:TextField Classes="Standard Medium" Text="Value"/>
                            <controls:TextField Classes="Filled Medium" Text="Value"/>
                            <controls:TextField Classes="Outlined Medium" Text="Value"/>

                            <controls:TextField Classes="Standard Medium Error" Text="Value"/>
                            <controls:TextField Classes="Filled Medium Error" Text="Value"/>
                            <controls:TextField Classes="Outlined Medium Error" Text="Value"/>

                            <controls:TextField Classes="Standard Medium" Text="Value" IsEnabled="False"/>
                            <controls:TextField Classes="Filled Medium" Text="Value" IsEnabled="False"/>
                            <controls:TextField Classes="Outlined Medium" Text="Value" IsEnabled="False"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Spacing="5">
                            <controls:TextField Classes="Standard Small" Text="Value"/>
                            <controls:TextField Classes="Filled Small" Text="Value"/>
                            <controls:TextField Classes="Outlined Small" Text="Value"/>

                            <controls:TextField Classes="Standard Small Error" Text="Value"/>
                            <controls:TextField Classes="Filled Small Error" Text="Value"/>
                            <controls:TextField Classes="Outlined Small Error" Text="Value"/>

                            <controls:TextField Classes="Standard Small" Text="Value" IsEnabled="False"/>
                            <controls:TextField Classes="Filled Small" Text="Value" IsEnabled="False"/>
                            <controls:TextField Classes="Outlined Small" Text="Value" IsEnabled="False"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Spacing="5">
                            <controls:TextField Classes="Standard Medium"/>
                            <controls:TextField Classes="Filled Medium"/>
                            <controls:TextField Classes="Outlined Medium"/>

                            <controls:TextField Classes="Standard Medium Error"/>
                            <controls:TextField Classes="Filled Medium Error"/>
                            <controls:TextField Classes="Outlined Medium Error"/>

                            <controls:TextField Classes="Standard Medium" IsEnabled="False"/>
                            <controls:TextField Classes="Filled Medium" IsEnabled="False"/>
                            <controls:TextField Classes="Outlined Medium" IsEnabled="False"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" Spacing="5">
                            <controls:TextField Classes="Standard Small"/>
                            <controls:TextField Classes="Filled Small"/>
                            <controls:TextField Classes="Outlined Small"/>
                            <controls:TextField Classes="Standard Small Error"/>
                            <controls:TextField Classes="Filled Small Error"/>
                            <controls:TextField Classes="Outlined Small Error"/>

                            <controls:TextField Classes="Standard Small" IsEnabled="False"/>
                            <controls:TextField Classes="Filled Small" IsEnabled="False"/>
                            <controls:TextField Classes="Outlined Small" IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border> 

            <!-- MULTILINE: ГИБКИЕ ПОЛЯ -->
            <Border Background="White" Padding="20" CornerRadius="8" BoxShadow="0 2 8 0 #1A000000">
                <StackPanel Spacing="15">
                    <TextBlock Text="MultiLine - Flexible Height" FontWeight="Bold" FontSize="18"/>
                    
                    <Grid ColumnDefinitions="1*,1*,1*" ColumnSpacing="30">
                        <StackPanel Grid.Column="0" Spacing="8">
                            <TextBlock Text="Standard Flexible" FontWeight="SemiBold" FontSize="14"/>
                            <controls:TextField Classes="Standard Medium Flexible" Label="Flexible Field" 
                                              Text="First line of text&#x0a;Second line&#x0a;Third line"/>
                             <controls:TextField Classes="Standard Small Flexible" Label="Flexible Field"
                                              Text="First line of text&#x0a;Second line&#x0a;Third line"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Spacing="8">
                            <TextBlock Text="Filled Flexible" FontWeight="SemiBold" FontSize="14"/>
                            <controls:TextField Classes="Filled Medium Flexible" Label="Flexible Field"
                                              Text="First line&#x0a;Second line&#x0a;Third line&#x0a;Fourth line"/>
                            <controls:TextField Classes="Filled Small Flexible" Label="Flexible Field"
                                              Text="First line&#x0a;Second line&#x0a;Third line&#x0a;line 4"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Spacing="8">
                            <TextBlock Text="Outlined Flexible" FontWeight="SemiBold" FontSize="14"/>
                            <controls:TextField Classes="Outlined Medium Flexible" Label="Flexible Field"
                                              Text="Multi-line&#x0a;text field&#x0a;with outline&#x0a;border style"/>
                            <controls:TextField Classes="Outlined Small Flexible" Label="Flexible Field"
                                              Text="Multi-line&#x0a;text field&#x0a;with outline&#x0a;border style"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border> 

            <!-- MULTILINE: MIN ROWS  -->
            <Border Background="White" Padding="20" CornerRadius="8" BoxShadow="0 2 8 0 #1A000000">
                <StackPanel Spacing="15">
                    <TextBlock Text="MultiLine - Minimum Rows" FontWeight="Bold" FontSize="18"/>
                    
                    <Grid ColumnDefinitions="1*,1*,1*" ColumnSpacing="30">
                        <StackPanel Grid.Column="0" Spacing="8">
                            <TextBlock Text="MinRow 4" FontWeight="SemiBold" FontSize="14"/>
                            <controls:TextField Classes="Standard Medium MinRow Row4" Label="Min 4 Rows" 
                                              Text="Line 1&#x0a;Line 2"/>
                            <controls:TextField Classes="Standard Small MinRow Row4" Label="Min 4 Rows"
                                              Text="Line 1&#x0a;Line 2"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Spacing="8">
                            <TextBlock Text="MinRow 6" FontWeight="SemiBold" FontSize="14"/>
                            <controls:TextField Classes="Filled Medium MinRow Row6" Label="Min 6 Rows"
                                              Text="Line 1&#x0a;Line 2&#x0a;Line 3"/>
                            <controls:TextField Classes="Filled Small MinRow Row6" Label="Min 6 Rows"
                                              Text="Line 1&#x0a;Line 2&#x0a;Line 3"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Spacing="8">
                            <TextBlock Text="MinRow 8" FontWeight="SemiBold" FontSize="14"/>
                            <controls:TextField Classes="Outlined Medium MinRow Row8" Label="Min 8 Rows"/>
                            <controls:TextField Classes="Outlined Small MinRow Row8" Label="Min 8 Rows"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>  

            <!-- MULTILINE: MAX ROWS (со скроллом) -->
            <Border Background="White" Padding="20" CornerRadius="8" BoxShadow="0 2 8 0 #1A000000">
                <StackPanel Spacing="15">
                    <TextBlock Text="MultiLine - Maximum Rows (with Scroll)" FontWeight="Bold" FontSize="18"/>
                    
                    <Grid ColumnDefinitions="1*,1*,1*" ColumnSpacing="30">
                        <StackPanel Grid.Column="0" Spacing="8">
                            <TextBlock Text="MaxRow 4" FontWeight="SemiBold" FontSize="14"/>
                            <controls:TextField Classes="Standard Medium MaxRow Row4" Label="Max 4 Rows"
                                              Text="Line 1&#x0a;Line 2&#x0a;Line 3&#x0a;Line 4" />
                             <controls:TextField Classes="Standard Small MaxRow Row4" Label="Max 4 Rows Empty"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Spacing="8">
                            <TextBlock Text="MaxRow 6" FontWeight="SemiBold" FontSize="14"/>
                            <controls:TextField Classes="Filled Medium MaxRow Row6" Label="Max 6 Rows"
                                              Text="Line 1&#x0a;Line 2&#x0a;Line 3&#x0a;Line 4&#x0a;Line 5&#x0a;Line 6"/>
                            <controls:TextField Classes="Filled Small MaxRow Row6" Label="Max 6 Rows Empty"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Spacing="8">
                            <TextBlock Text="MaxRow 8" FontWeight="SemiBold" FontSize="14"/>
                            <controls:TextField Classes="Outlined Medium MaxRow Row8" Label="Max 8 Rows"
                                              Text="Line 1&#x0a;Line 2&#x0a;Line 3&#x0a;Line 4&#x0a;Line 5&#x0a;Line 6&#x0a;Line 7&#x0a;Line 8"/>
                            <controls:TextField Classes="Outlined Small MaxRow Row8" Label="Max 8 Rows Empty"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>