                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Spacing="8">
                            <TextBlock Text="Min Rows = 6" FontWeight="SemiBold" FontSize="14"/>
                            <controls:TextField Variant="Filled" Label="Min 6 Rows" IsMultiLine="True" MinRows="6"
                                              Text="Line 1&#x0a;Line 2&#x0a;Line 3"/>
                            <controls:TextField Variant="Filled" Label="Min 6 Rows" IsMultiLine="True" MinRows="6" Size="Small"
                                              Text="Line 1&#x0a;Line 2&#x0a;Line 3"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Spacing="8">
                            <TextBlock Text="Min Rows = 8" FontWeight="SemiBold" FontSize="14"/>
                            <controls:TextField Variant="Outlined" Label="Min 8 Rows" IsMultiLine="True" MinRows="8"/>
