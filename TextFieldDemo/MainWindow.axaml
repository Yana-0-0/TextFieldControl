            <!-- MULTILINE: MAX ROWS (со скроллом) -->
            <Border Background="White" Padding="20" CornerRadius="8" BoxShadow="0 2 8 0 #1A000000">
                <StackPanel Spacing="15">
                    <TextBlock Text="MultiLine - Maximum Rows (with Scroll)" FontWeight="Bold" FontSize="18"/>
                    
                    <Grid ColumnDefinitions="1*,1*,1*" ColumnSpacing="30">
                        <StackPanel Grid.Column="0" Spacing="8">
                            <TextBlock Text="Max Rows = 4" FontWeight="SemiBold" FontSize="14"/>
                            <controls:TextField Variant="Standard" Label="Max 4 Rows" IsMultiLine="True" MaxRows="4"
                                              Text="Line 1&#x0a;Line 2&#x0a;Line 3&#x0a;Line 4"/>
                            <controls:TextField Variant="Standard" Label="Max 4 Rows Empty" IsMultiLine="True" MaxRows="4" Size="Small"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Spacing="8">
                            <TextBlock Text="Max Rows = 6" FontWeight="SemiBold" FontSize="14"/>
                            <controls:TextField Variant="Filled" Label="Max 6 Rows" IsMultiLine="True" MaxRows="6"
                                              Text="Line 1&#x0a;Line 2&#x0a;Line 3&#x0a;Line 4&#x0a;Line 5&#x0a;Line 6"/>
                            <controls:TextField Variant="Filled" Label="Max 6 Rows Empty" IsMultiLine="True" MaxRows="6" Size="Small"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Spacing="8">
                            <TextBlock Text="Max Rows = 8" FontWeight="SemiBold" FontSize="14"/>
                            <controls:TextField Variant="Outlined" Label="Max 8 Rows" IsMultiLine="True" MaxRows="8"
                                              Text="Line 1&#x0a;Line 2&#x0a;Line 3&#x0a;Line 4&#x0a;Line 5&#x0a;Line 6&#x0a;Line 7&#x0a;Line 8"/>
                            <controls:TextField Variant="Outlined" Label="Max 8 Rows Empty" IsMultiLine="True" MaxRows="8" Size="Small"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>