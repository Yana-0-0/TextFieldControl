<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:TextFieldControl.Controls">

    <!-- ===== ÐÅÑÓÐÑÛ ÖÂÅÒÎÂ ===== -->
    <Color x:Key="StandardBackgroundColor">White</Color>
    <Color x:Key="FilledBackgroundColor">#F0F0F0</Color>
    <Color x:Key="OutlinedBackgroundColor">White</Color>
    <Color x:Key="ScrollBarBackgroundColor">#E8E8E8</Color>
    
    <!-- Öâåòà ãðàíèö äëÿ ðàçëè÷íûõ ñîñòîÿíèé -->
    <Color x:Key="BorderColorEnabled">#C4C4C4</Color>
    <Color x:Key="BorderColorHover">Black</Color>
    <Color x:Key="BorderColorFocused">#1976D2</Color>
    <Color x:Key="BorderColorError">#D32F2F</Color>
    <Color x:Key="BorderColorDisabled">#CFCFCF</Color>
    
    <!-- Öâåòà ìåòîê äëÿ ðàçëè÷íûõ ñîñòîÿíèé -->
    <Color x:Key="LabelColorEnabled">#757575</Color>
    <Color x:Key="LabelColorFocused">#1976D2</Color>
    <Color x:Key="LabelColorError">#D32F2F</Color>
    <Color x:Key="LabelColorDisabled">#9E9E9E</Color>
    <Color x:Key="TextColorDisabled">#9E9E9E</Color>

    <!-- Ðåñóðñ äëÿ ïóíêòèðíîé ãðàíèöû â ñîñòîÿíèè disabled -->
    <DrawingBrush x:Key="TextField.Border.Disabled.Dotted"
                  DestinationRect="0,0,8,2"
                  Stretch="None"
                  TileMode="Tile">
        <DrawingBrush.Drawing>
            <GeometryDrawing Brush="{StaticResource BorderColorDisabled}">
                <GeometryDrawing.Geometry>
                    <GeometryGroup>
                        <RectangleGeometry Rect="1,0.5,1,1"/>
                        <RectangleGeometry Rect="3.5,0.5,1,1"/>
                        <RectangleGeometry Rect="6,0.5,1,1"/>
                    </GeometryGroup>
                </GeometryDrawing.Geometry>
            </GeometryDrawing>
        </DrawingBrush.Drawing>
    </DrawingBrush>

    <!-- ===== ÐÀÇÌÅÐÛ È ØÐÈÔÒÛ ===== -->
    <x:Double x:Key="MediumHeight">46</x:Double>
    <x:Double x:Key="SmallHeight">40</x:Double>
    <x:Double x:Key="MediumFontSize">16</x:Double>
    <x:Double x:Key="SmallFontSize">16</x:Double>
    <x:Double x:Key="LabelTextFontSize">16</x:Double>
    <x:Double x:Key="LabelHintFontSize">11</x:Double>

    <!-- ===== SCROLLBAR ÐÀÇÌÅÐÛ ===== -->
    <x:Double x:Key="ScrollBarWidth">16</x:Double>
    <x:Double x:Key="ScrollBarThumbWidth">8</x:Double>
    <x:Double x:Key="ScrollBarThumbMinHeight">20</x:Double>

    <!-- ===== SCROLL ÊÎÍÑÒÀÍÒÛ ===== -->
    <x:Double x:Key="ScrollWheelSpeed">20</x:Double>

    <!-- ===== ÂÛÑÎÒÛ ÄËß MULTILINE ===== -->
    <x:Double x:Key="Row4Height">86</x:Double>
    <x:Double x:Key="Row6Height">128</x:Double>
    <x:Double x:Key="Row8Height">170</x:Double>
    <x:Double x:Key="MaxRow4Height">128</x:Double>
    <x:Double x:Key="MaxRow6Height">170</x:Double>
    <x:Double x:Key="MaxRow8Height">202</x:Double>

    <!-- ===== ÐÅÑÓÐÑÛ ÎÒÑÒÓÏÎÂ ===== -->
    
    <!-- SINGLELINE ÎÒÑÒÓÏÛ ÄËß ÒÅÊÑÒÀ -->
    <Thickness x:Key="SingleLineMediumStandardNoValue">0,16,0,16</Thickness>
    <Thickness x:Key="SingleLineMediumStandardWithValue">0,22,0,10</Thickness>
    <Thickness x:Key="SingleLineMediumFilledWithValue">12,22,12,10</Thickness>
    <Thickness x:Key="SingleLineMediumOutlinedPadding">12,16,12,16</Thickness>

    <Thickness x:Key="SingleLineSmallStandardNoValue">0,12,0,12</Thickness>
    <Thickness x:Key="SingleLineSmallStandardWithValue">0,18,0,6</Thickness>
    <Thickness x:Key="SingleLineSmallOutlinedPadding">12,12,12,12</Thickness>
    <Thickness x:Key="SingleLineSmallFilledWithValue">12,18,12,6</Thickness>

    <!-- MULTILINE ÎÒÑÒÓÏÛ ÄËß ÒÅÊÑÒÀ -->
    <Thickness x:Key="MultiLinePaddingStandard">0,22,2,10</Thickness>
    <Thickness x:Key="MultiLinePaddingFilledOutlined">12,22,2,10</Thickness>

    <Thickness x:Key="MultiLineSmallPaddingStandard">0,18,2,6</Thickness>
    <Thickness x:Key="MultiLineSmallPaddingFilledOutlined">12,18,2,6</Thickness>

    <Thickness x:Key="MultiLineOutlinedPaddingMedium">12,11,2,10</Thickness>
    <Thickness x:Key="MultiLineOutlinedPaddingSmall">12,9,2,6</Thickness>

    <!-- LABEL ÎÒÑÒÓÏÛ -->
    <Thickness x:Key="LabelHintPadding">4,0,4,0</Thickness>

    <Thickness x:Key="LabelTextMediumStandard">0,16,0,16</Thickness>
    <Thickness x:Key="LabelTextSmallStandard">0,12,0,12</Thickness>
    <Thickness x:Key="LabelTextMediumFilledOutlined">12,16,0,16</Thickness>
    <Thickness x:Key="LabelTextSmallFilledOutlined">12,12,0,12</Thickness>

    <Thickness x:Key="LabelHintMediumStandard">0,4,0,0</Thickness>
    <Thickness x:Key="LabelHintSmallStandard">0,2,0,0</Thickness>
    <Thickness x:Key="LabelHintMediumFilled">12,4,0,0</Thickness>
    <Thickness x:Key="LabelHintSmallFilled">12,2,0,0</Thickness>
    <Thickness x:Key="LabelHintMediumOutlined">8,-10,0,0</Thickness>
    <Thickness x:Key="LabelHintSmallOutlined">8,-8,0,0</Thickness>

    <!-- ===== ÎÑÍÎÂÍÎÉ ÒÅÌÀÒÈ×ÅÑÊÈÉ ÑÒÈËÜ ÄËß TEXTFIELD ===== -->
    <ControlTheme x:Key="{x:Type controls:TextField}" TargetType="controls:TextField">
        <Setter Property="Background" Value="{StaticResource StandardBackgroundColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColorEnabled}"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="MinHeight" Value="{StaticResource MediumHeight}"/>
        <Setter Property="FontSize" Value="{StaticResource MediumFontSize}"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="CaretBrush" Value="Black"/>
        <Setter Property="SelectionBrush" Value="#2F50C7"/>
        <Setter Property="SelectionForegroundBrush" Value="White"/>
        
        <Setter Property="Template">
            <ControlTemplate TargetType="controls:TextField">
                <DataValidationErrors>
                    <Grid Margin="0,6,0,0">
                        <Border Name="PART_BorderElement"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{TemplateBinding CornerRadius}"
                                ClipToBounds="False">
                            
                            <Grid ClipToBounds="False">
                                <!-- Outlined Label Container -->
                                <Border Name="PART_OutlinedLabelContainer"
                                        Background="Transparent"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        CornerRadius="2"
                                        IsHitTestVisible="False"
                                        IsVisible="False">
                                    <TextBlock Name="PART_OutlinedLabel"
                                               Text="{TemplateBinding Label}"
                                               Foreground="{StaticResource LabelColorEnabled}"
                                               FontSize="{StaticResource LabelTextFontSize}"/>
                                </Border>
                                
                                <!-- Standard/Filled Label -->
                                <TextBlock Name="PART_Label"
                                           Text="{TemplateBinding Label}"
                                           Foreground="{StaticResource LabelColorEnabled}"
                                           FontSize="{StaticResource LabelTextFontSize}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           IsHitTestVisible="False"/>
                                
                                <!-- Grid äëÿ ScrollViewer è êàñòîìíîãî ScrollBar -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.Column="0"
                                            Name="PART_TextContainer"
                                            Background="Transparent"
                                            ClipToBounds="True">
                                        <ScrollViewer Name="PART_ScrollViewer"
                                                      VerticalScrollBarVisibility="Hidden"
                                                      HorizontalScrollBarVisibility="Disabled"
                                                      VerticalAlignment="Stretch"
                                                      HorizontalAlignment="Stretch"
                                                      Background="Transparent"
                                                      ClipToBounds="True">
                                            <TextPresenter Name="PART_TextPresenter"
                                                           Text="{TemplateBinding Text, Mode=TwoWay}"
                                                           CaretBrush="{TemplateBinding CaretBrush}"
                                                           SelectionBrush="{TemplateBinding SelectionBrush}"
                                                           SelectionForegroundBrush="{TemplateBinding SelectionForegroundBrush}"
                                                           Background="Transparent"
                                                           TextWrapping="Wrap"
                                                           CaretIndex="{TemplateBinding CaretIndex}"
                                                           SelectionStart="{TemplateBinding SelectionStart}"
                                                           SelectionEnd="{TemplateBinding SelectionEnd}"
                                                           IsHitTestVisible="True"
                                                           VerticalAlignment="Top"
                                                           ClipToBounds="False"
                                                           Margin="0"/>
                                        </ScrollViewer>
                                    </Border>
                                    <ScrollBar Name="PART_CustomScrollBar"
                                               Grid.Column="1"
                                               Orientation="Vertical"
                                               Width="{StaticResource ScrollBarWidth}"
                                               VerticalAlignment="Stretch"
                                               HorizontalAlignment="Right"
                                               Opacity="0"
                                               IsHitTestVisible="False"
                                               Minimum="0"
                                               Maximum="100"
                                               ViewportSize="100"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </DataValidationErrors>
            </ControlTemplate>
        </Setter>

        <!-- === ÑÒÈËÜ ÄËß ÊÀÑÒÎÌÍÎÃÎ SCROLLBAR === -->
        <Style Selector="^ /template/ ScrollBar#PART_CustomScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <ControlTemplate TargetType="ScrollBar">
                    <Border Background="{StaticResource ScrollBarBackgroundColor}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Track Name="PART_Track"
                               IsDirectionReversed="False"
                               Minimum="{TemplateBinding Minimum}"
                               Maximum="{TemplateBinding Maximum}"
                               Orientation="{TemplateBinding Orientation}"
                               Value="{TemplateBinding Value, Mode=TwoWay}"
                               ViewportSize="{TemplateBinding ViewportSize}">
                            <Track.Thumb>
                                <Thumb Name="PART_Thumb"
                                       Background="{StaticResource BorderColorEnabled}"
                                       BorderBrush="Transparent"
                                       BorderThickness="1"
                                       Width="{StaticResource ScrollBarThumbWidth}"
                                       MinHeight="{StaticResource ScrollBarThumbMinHeight}">
                                    <Thumb.Styles>
                                        <Style Selector="Thumb">
                                            <Setter Property="Template">
                                                <ControlTemplate TargetType="Thumb">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="4"/>
                                                </ControlTemplate>
                                            </Setter>
                                        </Style>
                                    </Thumb.Styles>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>

        <!-- === ÁÀÇÎÂÛÅ ÑÒÈËÈ È ÐÀÇÌÅÐÛ === -->
        <Style Selector="^.Small">
            <Setter Property="MinHeight" Value="{StaticResource SmallHeight}"/>
            <Setter Property="FontSize" Value="{StaticResource SmallFontSize}"/>
        </Style>

        <Style Selector="^.Medium">
            <Setter Property="MinHeight" Value="{StaticResource MediumHeight}"/>
            <Setter Property="FontSize" Value="{StaticResource MediumFontSize}"/>
        </Style>

        <!-- === ÂÀÐÈÀÍÒÛ ÎÔÎÐÌËÅÍÈß === -->
        <Style Selector="^.Standard">
            <Setter Property="Background" Value="{StaticResource StandardBackgroundColor}"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="CornerRadius" Value="4,4,0,0"/>
        </Style>

        <Style Selector="^.Filled">
            <Setter Property="Background" Value="{StaticResource FilledBackgroundColor}"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="CornerRadius" Value="4,4,0,0"/>
        </Style>

        <Style Selector="^.Outlined">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>

        <!-- === MULTILINE: ÒÈÏÛ ÐÅÆÈÌÎÂ === -->
        <Style Selector="^.Flexible">
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="MaxHeight" Value="NaN"/>
            <Setter Property="Height" Value="NaN"/>
        </Style>

        <Style Selector="^.MinRow">
            <Setter Property="MaxHeight" Value="NaN"/>
            <Setter Property="Height" Value="NaN"/>
        </Style>

        <Style Selector="^.MaxRow">
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="Height" Value="NaN"/>
        </Style>

        <!-- === MULTILINE: ÇÀÄÀÍÍÛÅ ÂÛÑÎÒÛ === -->
        <Style Selector="^.Row4">
            <Setter Property="MinHeight" Value="{StaticResource Row4Height}"/>
        </Style>

        <Style Selector="^.Row6">
            <Setter Property="MinHeight" Value="{StaticResource Row6Height}"/>
        </Style>

        <Style Selector="^.Row8">
            <Setter Property="MinHeight" Value="{StaticResource Row8Height}"/>
        </Style>

        <!-- === MULTILINE: MAXROW Ñ ÎÃÐÀÍÈ×ÅÍÈÅÌ ÂÛÑÎÒÛ === -->
        <Style Selector="^.MaxRow.Row4">
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="MaxHeight" Value="{StaticResource MaxRow4Height}"/>
        </Style>

        <Style Selector="^.MaxRow.Row6">
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="MaxHeight" Value="{StaticResource MaxRow6Height}"/>
        </Style>

        <Style Selector="^.MaxRow.Row8">
            <Setter Property="MinHeight" Value="0"/>
            <Setter Property="MaxHeight" Value="{StaticResource MaxRow8Height}"/>
        </Style>

        <!-- === ÓÏÐÀÂËÅÍÈÅ ÂÈÄÈÌÎÑÒÜÞ LABEL === -->
        <Style Selector="^.Outlined /template/ Border#PART_OutlinedLabelContainer">
            <Setter Property="IsVisible" Value="True"/>
        </Style>

        <Style Selector="^.Outlined /template/ TextBlock#PART_Label">
            <Setter Property="IsVisible" Value="False"/>
        </Style>

        <Style Selector="^.Standard /template/ Border#PART_OutlinedLabelContainer,
                         ^.Filled /template/ Border#PART_OutlinedLabelContainer">
            <Setter Property="IsVisible" Value="False"/>
        </Style>

        <Style Selector="^.Standard /template/ TextBlock#PART_Label,
                         ^.Filled /template/ TextBlock#PART_Label">
            <Setter Property="IsVisible" Value="True"/>
        </Style>

        <!-- === SINGLELINE ÎÒÑÒÓÏÛ ÄËß ÒÅÊÑÒÀ === -->

        <!-- Standard âàðèàíò -->
        <Style Selector="^.Standard.Medium:empty /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource SingleLineMediumStandardNoValue}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="^.Standard.Medium:not(:empty) /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource SingleLineMediumStandardWithValue}"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>
        <Style Selector="^.Standard.Small:empty /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource SingleLineSmallStandardNoValue}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="^.Standard.Small:not(:empty) /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource SingleLineSmallStandardWithValue}"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>

        <!-- Filled âàðèàíò -->
        <Style Selector="^.Filled.Medium:empty /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource SingleLineMediumOutlinedPadding}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="^.Filled.Medium:not(:empty) /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource SingleLineMediumFilledWithValue}"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>
        <Style Selector="^.Filled.Small:empty /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource SingleLineSmallOutlinedPadding}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="^.Filled.Small:not(:empty) /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource SingleLineSmallFilledWithValue}"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>

        <!-- Outlined âàðèàíò -->
        <Style Selector="^.Outlined.Medium:empty /template/ Border#PART_TextContainer,
                         ^.Outlined.Medium:not(:empty) /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource SingleLineMediumOutlinedPadding}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="^.Outlined.Small:empty /template/ Border#PART_TextContainer,
                         ^.Outlined.Small:not(:empty) /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource SingleLineSmallOutlinedPadding}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- === SINGLELINE ÎÒÑÒÓÏÛ ÄËß LABEL === -->

        <!-- Label-òåêñò (placeholder) -->
        <Style Selector="^.Standard.Medium:empty /template/ TextBlock#PART_Label">
            <Setter Property="Margin" Value="{StaticResource LabelTextMediumStandard}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="^.Standard.Small:empty /template/ TextBlock#PART_Label">
            <Setter Property="Margin" Value="{StaticResource LabelTextSmallStandard}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="^.Filled.Medium:empty /template/ TextBlock#PART_Label">
            <Setter Property="Margin" Value="{StaticResource LabelTextMediumFilledOutlined}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="^.Filled.Small:empty /template/ TextBlock#PART_Label">
            <Setter Property="Margin" Value="{StaticResource LabelTextSmallFilledOutlined}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="^.Outlined.Medium:empty /template/ Border#PART_OutlinedLabelContainer">
            <Setter Property="Margin" Value="{StaticResource LabelTextMediumFilledOutlined}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="^.Outlined.Small:empty /template/ Border#PART_OutlinedLabelContainer">
            <Setter Property="Margin" Value="{StaticResource LabelTextSmallFilledOutlined}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <!-- Label-ìåòêà (íàäïèñü íàä ïîëåì) -->
        <Style Selector="^.Standard.Medium:not(:empty) /template/ TextBlock#PART_Label">
            <Setter Property="Margin" Value="{StaticResource LabelHintMediumStandard}"/>
            <Setter Property="FontSize" Value="{StaticResource LabelHintFontSize}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        <Style Selector="^.Standard.Small:not(:empty) /template/ TextBlock#PART_Label">
            <Setter Property="Margin" Value="{StaticResource LabelHintSmallStandard}"/>
            <Setter Property="FontSize" Value="{StaticResource LabelHintFontSize}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        <Style Selector="^.Filled.Medium:not(:empty) /template/ TextBlock#PART_Label">
            <Setter Property="Margin" Value="{StaticResource LabelHintMediumFilled}"/>
            <Setter Property="FontSize" Value="{StaticResource LabelHintFontSize}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        <Style Selector="^.Filled.Small:not(:empty) /template/ TextBlock#PART_Label">
            <Setter Property="Margin" Value="{StaticResource LabelHintSmallFilled}"/>
            <Setter Property="FontSize" Value="{StaticResource LabelHintFontSize}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        <Style Selector="^.Outlined.Medium:not(:empty) /template/ Border#PART_OutlinedLabelContainer">
            <Setter Property="Margin" Value="{StaticResource LabelHintMediumOutlined}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style Selector="^.Outlined.Small:not(:empty) /template/ Border#PART_OutlinedLabelContainer">
            <Setter Property="Margin" Value="{StaticResource LabelHintSmallOutlined}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Outlined Label-ìåòêà - äîïîëíèòåëüíûé padding -->
        <Style Selector="^.Outlined:not(:empty) /template/ TextBlock#PART_OutlinedLabel">
            <Setter Property="FontSize" Value="{StaticResource LabelHintFontSize}"/>
            <Setter Property="Margin" Value="{StaticResource LabelHintPadding}"/>
        </Style>

        <!-- === MULTILINE ÎÒÑÒÓÏÛ ÄËß ÒÅÊÑÒÀ === -->
        <!-- Standard è Filled -->
        <Style Selector="^[IsMultiLine=True].Standard.Medium /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource MultiLinePaddingStandard}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        <Style Selector="^[IsMultiLine=True].Standard.Small /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource MultiLineSmallPaddingStandard}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        <Style Selector="^[IsMultiLine=True].Filled.Medium /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource MultiLinePaddingFilledOutlined}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        <Style Selector="^[IsMultiLine=True].Filled.Small /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource MultiLineSmallPaddingFilledOutlined}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

        <!-- Outlined -->
        <Style Selector="^[IsMultiLine=True].Outlined.Medium /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource MultiLineOutlinedPaddingMedium}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        <Style Selector="^[IsMultiLine=True].Outlined.Small /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource MultiLineOutlinedPaddingSmall}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

        <!-- === MULTILINE ÎÒÑÒÓÏÛ ÄËß LABEL === -->
        <!-- MinRow: Label-òåêñò ñâåðõó -->
        <Style Selector="^.MinRow.Medium:empty.Standard /template/ TextBlock#PART_Label">
            <Setter Property="Margin" Value="{StaticResource MultiLinePaddingStandard}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        <Style Selector="^.MinRow.Small:empty.Standard /template/ TextBlock#PART_Label">
            <Setter Property="Margin" Value="{StaticResource MultiLineSmallPaddingStandard}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        <Style Selector="^.MinRow.Medium:empty.Filled /template/ TextBlock#PART_Label">
            <Setter Property="Margin" Value="{StaticResource MultiLinePaddingFilledOutlined}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        <Style Selector="^.MinRow.Small:empty.Filled /template/ TextBlock#PART_Label">
            <Setter Property="Margin" Value="{StaticResource MultiLineSmallPaddingFilledOutlined}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>
        <Style Selector="^.MinRow.Medium:empty.Outlined /template/ Border#PART_OutlinedLabelContainer">
            <Setter Property="Margin" Value="{StaticResource MultiLineOutlinedPaddingMedium}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="^.MinRow.Small:empty.Outlined /template/ Border#PART_OutlinedLabelContainer">
            <Setter Property="Margin" Value="{StaticResource MultiLineOutlinedPaddingSmall}"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <!-- Flexible/MaxRow: Label-òåêñò ïî öåíòðó -->
        <Style Selector="^[IsMultiLine=True][HasMinRows=False].Medium.Standard:empty /template/ TextBlock#PART_Label">
            <Setter Property="Margin" Value="{StaticResource LabelTextMediumStandard}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="^[IsMultiLine=True][HasMinRows=False].Small.Standard:empty /template/ TextBlock#PART_Label">
            <Setter Property="Margin" Value="{StaticResource LabelTextSmallStandard}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="^[IsMultiLine=True][HasMinRows=False].Medium.Filled:empty /template/ TextBlock#PART_Label">
            <Setter Property="Margin" Value="{StaticResource LabelTextMediumFilledOutlined}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="^[IsMultiLine=True][HasMinRows=False].Small.Filled:empty /template/ TextBlock#PART_Label">
            <Setter Property="Margin" Value="{StaticResource LabelTextSmallFilledOutlined}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="^[IsMultiLine=True][HasMinRows=False].Medium.Outlined:empty /template/ Border#PART_OutlinedLabelContainer">
            <Setter Property="Margin" Value="{StaticResource LabelTextMediumFilledOutlined}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style Selector="^[IsMultiLine=True][HasMinRows=False].Small.Outlined:empty /template/ Border#PART_OutlinedLabelContainer">
            <Setter Property="Margin" Value="{StaticResource LabelTextSmallFilledOutlined}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>

        <!-- Flexible/MaxRow: ïóñòûå ïîëÿ - òåêñò ïî öåíòðó -->
        <Style Selector="^[IsMultiLine=True][HasMinRows=False].Medium.Standard:empty /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource SingleLineMediumStandardNoValue}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="^[IsMultiLine=True][HasMinRows=False].Small.Standard:empty /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource SingleLineSmallStandardNoValue}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="^[IsMultiLine=True][HasMinRows=False].Medium.Filled:empty /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource SingleLineMediumOutlinedPadding}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="^[IsMultiLine=True][HasMinRows=False].Small.Filled:empty /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource SingleLineSmallOutlinedPadding}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="^[IsMultiLine=True][HasMinRows=False].Medium.Outlined:empty /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource SingleLineMediumOutlinedPadding}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style Selector="^[IsMultiLine=True][HasMinRows=False].Small.Outlined:empty /template/ Border#PART_TextContainer">
            <Setter Property="Margin" Value="{StaticResource SingleLineSmallOutlinedPadding}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- === ÓÏÐÀÂËÅÍÈÅ ÑÊÐÎËËÎÌ È ÏÅÐÅÍÎÑÎÌ ÒÅÊÑÒÀ === -->
        <Style Selector="^[IsMultiLine=True] /template/ TextPresenter#PART_TextPresenter">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="MinHeight" Value="{TemplateBinding MinHeight}"/>
        </Style>
        <Style Selector="^[IsMultiLine=False] /template/ ScrollViewer#PART_ScrollViewer">
            <Setter Property="VerticalScrollBarVisibility" Value="Disabled"/>
        </Style>
        <Style Selector="^[IsMultiLine=False] /template/ TextPresenter#PART_TextPresenter">
            <Setter Property="TextWrapping" Value="NoWrap"/>
        </Style>

        <!-- === ÑÎÑÒÎßÍÈß ÊÎÍÒÐÎËÀ === -->
        <Style Selector="^:disabled">
            <Setter Property="Opacity" Value="1.0"/>
            <Setter Property="Foreground" Value="{StaticResource TextColorDisabled}"/>
        </Style>
        <Style Selector="^:focus:not(:disabled)">
            <Setter Property="BorderBrush" Value="{StaticResource BorderColorFocused}"/>
        </Style>
        <Style Selector="^:pointerover:not(:disabled):not(:focus)">
            <Setter Property="BorderBrush" Value="{StaticResource BorderColorHover}"/>
        </Style>
        <Style Selector="^.Error:not(:disabled):not(:pointerover):not(:focus)">
            <Setter Property="BorderBrush" Value="{StaticResource BorderColorError}"/>
        </Style>

        <Style Selector="^:disabled.Standard">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource TextField.Border.Disabled.Dotted}"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
        </Style>
        <Style Selector="^:disabled.Filled">
            <Setter Property="Background" Value="{StaticResource FilledBackgroundColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TextField.Border.Disabled.Dotted}"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
        </Style>
        <Style Selector="^:disabled.Outlined">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColorDisabled}"/>
        </Style>

        <!-- === ÖÂÅÒ LABEL ÏÎ ÑÎÑÒÎßÍÈßÌ === -->
        <Style Selector="^:focus:not(:disabled):not(:empty) /template/ TextBlock#PART_Label,
                         ^:focus:not(:disabled):not(:empty) /template/ TextBlock#PART_OutlinedLabel">
            <Setter Property="Foreground" Value="{StaticResource LabelColorFocused}"/>
        </Style>
        <Style Selector="^.Error:not(:disabled):not(:pointerover):not(:focus):not(:empty) /template/ TextBlock#PART_Label,
                         ^.Error:not(:disabled):not(:pointerover):not(:focus):not(:empty) /template/ TextBlock#PART_OutlinedLabel">
            <Setter Property="Foreground" Value="{StaticResource LabelColorError}"/>
        </Style>
        <Style Selector="^:disabled /template/ TextBlock#PART_Label,
                         ^:disabled /template/ TextBlock#PART_OutlinedLabel">
            <Setter Property="Foreground" Value="{StaticResource LabelColorDisabled}"/>
        </Style>

    </ControlTheme>
</ResourceDictionary>